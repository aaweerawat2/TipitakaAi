{
  "name": "tripitaka-offline-ai",
  "version": "1.0.0",
  "description": "Offline Thai Tripitaka Reader with AI Assistant and Voice Features",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "prepare-data": "python3 scripts/1_extract_tripitaka.py && python3 scripts/2_chunking_embedding.py && python3 scripts/3_build_sqlite.py",
    "download-models": "node scripts/download_models.js",
    "build:android": "eas build --platform android --profile preview",
    "build:android:production": "eas build --platform android --profile production",
    "build:ios": "eas build --platform ios --profile preview",
    "submit:android": "eas submit --platform android"
  },
  "dependencies": {
    "@op-engineering/op-sqlite": "^11.0.0",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@react-navigation/bottom-tabs": "^6.5.20",
    "@react-navigation/native": "^6.1.17",
    "@react-navigation/native-stack": "^6.9.26",
    "lucide-react-native": "^0.358.0",
    "nativewind": "^2.0.11",
    "react": "18.2.0",
    "react-native": "0.73.1",
    "react-native-document-picker": "^9.1.2",
    "react-native-executorch": "^0.3.0",
    "react-native-fs": "^2.20.0",
    "react-native-gesture-handler": "^2.16.0",
    "react-native-haptic-feedback": "^2.2.0",
    "react-native-mmkv": "^2.12.2",
    "react-native-reanimated": "^3.8.1",
    "react-native-safe-area-context": "^4.9.0",
    "react-native-screens": "^3.30.1",
    "react-native-sound": "^0.11.2",
    "react-native-svg": "^15.1.0",
    "react-native-tts": "^4.1.0",
    "react-native-vector-icons": "^10.0.3",
    "tailwindcss": "^3.4.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/runtime": "^7.24.0",
    "@react-native-community/cli": "^20.1.1",
    "@react-native-community/cli-platform-android": "^20.1.1",
    "@react-native/babel-preset": "0.73.1",
    "@react-native/eslint-config": "0.73.1",
    "@react-native/metro-config": "0.73.1",
    "@react-native/typescript-config": "0.73.1",
    "@types/react": "^18.2.66",
    "@types/react-native": "^0.73.0",
    "@types/react-native-vector-icons": "^6.4.18",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18"
  }
}
